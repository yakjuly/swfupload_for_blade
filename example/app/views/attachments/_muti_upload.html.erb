<%  attachments = attachable.attachments %>
<div id="uploadContainer" class="uploadContainer">
  <div style="display: inline; border: solid 1px #7FAAFF; background-color: #C5D9FF; padding: 2px;">
    <%= tag :button, :id => "upload-button" -%>
  </div>
  
  <div id="fsUploadProgress" class="flash">
    <% attachments.each do |attachment| %>
      <div class="progressWrapper" id="SWFUpload_<%= attachment.id %>">
        <div class="progressContainer blue">
          <%= link_to_remove_attachment(attachable, attachment) %>

          <div class="progressName" id="attachment_<%= attachment.id %>">
            <%= create_attachment_hidden_tag(attachable, attachment) %>
            <%= link_to_attachment(attachment) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% content_for :head do %>
  <%= use_swfupload %>
  <%= swfupload("upload-button", attachable) -%>
<% end %>